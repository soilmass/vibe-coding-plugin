{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-start.sh"
          }
        ]
      },
      {
        "matcher": "resume",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-resume.sh"
          }
        ]
      },
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-resume.sh"
          }
        ]
      },
      {
        "matcher": "clear",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-start.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/pre-write-validate.py"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/pre-bash-validate.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/post-write.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/post-bash.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/stop-verify.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Evaluate the subagent output: Did it produce actionable, specific results? Did it follow its checklist? If the output is too vague or incomplete, respond with a message asking for more detail."
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/pre-compact.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-end.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Read(**)",
      "Glob(**)",
      "Grep(**)",
      "Bash(npm run dev*)",
      "Bash(npm run build*)",
      "Bash(npm run lint*)",
      "Bash(npm run test*)",
      "Bash(npm run start*)",
      "Bash(npx next *)",
      "Bash(npx next lint *)",
      "Bash(npx tsc *)",
      "Bash(npx tsc)",
      "Bash(npx prisma generate*)",
      "Bash(npx prisma migrate dev*)",
      "Bash(npx prisma studio*)",
      "Bash(npx prisma format*)",
      "Bash(npx prisma db push*)",
      "Bash(npx shadcn@latest *)",
      "Bash(npx shadcn *)",
      "Bash(npx turbo *)",
      "Bash(npx vitest *)",
      "Bash(npx playwright *)",
      "Bash(npx prettier *)",
      "Bash(npx tsx *)",
      "Bash(npm run seed)",
      "Bash(npx next info*)",
      "Bash(npm outdated*)",
      "Bash(npm ls*)",
      "Bash(npx playwright install*)",
      "Bash(git status*)",
      "Bash(git log*)",
      "Bash(git diff*)",
      "Bash(git branch*)",
      "Bash(git show*)",
      "Bash(git stash list*)",
      "Bash(git remote -v*)",
      "Bash(node *)",
      "Bash(ls *)",
      "Bash(pwd)",
      "Bash(which *)",
      "Bash(tree *)",
      "mcp__memory__*",
      "mcp__postgres__query"
    ],
    "ask": [
      "Bash(npm install*)",
      "Bash(npm uninstall*)",
      "Bash(npm ci*)",
      "Bash(npx prisma migrate deploy*)",
      "Bash(npx prisma db seed*)",
      "Bash(npx create-next-app*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(git push*)",
      "Bash(git checkout*)",
      "Bash(git merge*)",
      "Bash(git rebase*)",
      "Bash(git stash*)",
      "Bash(docker *)",
      "Bash(gh issue*)",
      "Bash(gh pr*)",
      "Bash(npx vercel*)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(sudo *)",
      "Bash(npm publish*)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Read(.env*)",
      "Write(.env*)",
      "Edit(.env*)",
      "Bash(npx prisma migrate reset*)",
      "Bash(npx prisma db drop*)",
      "mcp__postgres__execute"
    ]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludeCommands": ["git", "docker", "npx prisma studio"]
  }
}
